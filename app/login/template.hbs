<div class="landing-photo"></div>

<div class="page-container index">
  <div class="text-wrapper">
    <h1>Welcome to Stack Overflow.</h1>
    <p class="tagline"></p>
  </div>
  <form class="login-box" {{action "login" on="submit"}}>
  	{{#if errorMessage}}    
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    
    {{input placeholder="Mail" value=email }}
    {{input type="password" placeholder="Password" value=password }}

    <button class="login">Log in</button>
  </form>
</div>